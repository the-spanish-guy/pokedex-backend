{
  "parser": "@typescript-eslint/parser",
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["prettier", "plugin:@typescript-eslint/recommended", "standard"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "space-before-function-paren": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*.{ts,tsx}", "tests/**/*.spec.{ts,tsx}"]
    }
  ]
}
